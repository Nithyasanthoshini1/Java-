import math

class Triangle:
    def __init__(self):
        # The constructor doesn't take any parameters for this example
        pass

    def calculate_area(self, side1, side2, side3):
        # Heron's formula to calculate the area of a triangle
        s = (side1 + side2 + side3) / 2
        area = math.sqrt(s * (s - side1) * (s - side2) * (s - side3))
        return area

    def calculate_perimeter(self, side1, side2, side3):
        # Perimeter is the sum of all three sides
        perimeter = side1 + side2 + side3
        return perimeter

# Create an instance of the Triangle class
triangle_instance = Triangle()

# Given sides of the triangle
side1 = 3
side2 = 4
side3 = 5

# Calculate and print the area
area = triangle_instance.calculate_area(side1, side2, side3)
print("Area of the triangle:", area, "square units")

# Calculate and print the perimeter
perimeter = triangle_instance.calculate_perimeter(side1, side2, side3)
print("Perimeter of the triangle:", perimeter, "units")
